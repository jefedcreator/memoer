{
  "name": "memoer",
  "version": "1.0.0",
  "main": "index.ts",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "start": "tsx -r module-alias/register -r dotenv/config ./dist",
    "build": "rm -rf dist/ && tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "build-secrets": "tsx -r module-alias/register ./dist/config/build.env.js",
    "start:dev": "yarn run build && tsx -r module-alias/register ./dist",
    "test": "set NODE_ENV=test && yarn build && tsx -r module-alias/register --test --test-concurrency=1 ./src/tests/**test.ts",
    "cron": "tsx src/cron/index.ts",
    "start:cron": "concurrently \"yarn start\" \"yarn cron\""
  },
  "_moduleAliases": {
    "@controllers": "dist/controllers",
    "@middlewares/*": "dist/middlewares/*",
    "@validators": "dist/validators",
    "@services": "dist/services",
    "@models": "dist/models",
    "@utils": "dist/utils",
    "@config": "dist/config",
    "@types": "dist/types"
  },
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "@types/node": "^20.12.7",
    "bcrypt": "^5.1.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "date-format": "^4.0.14",
    "express": "^4.19.2",
    "joi": "^17.13.0",
    "jsonwebtoken": "^9.0.2",
    "mailersend": "^2.2.0",
    "mailgen": "^2.0.28",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.9.13",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-dist": "^5.18.2",
    "swagger-ui-express": "^5.0.1",
    "tsx": "^4.7.2",
    "typedi": "^0.10.0",
    "typescript": "^5.4.5",
    "undici": "^7.2.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node-schedule": "^2.1.7",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "@types/yamljs": "^0.2.34",
    "dotenv": "^16.4.5",
    "nodemon": "^3.1.0",
    "prettier": "^3.0.3",
    "prisma": "^6.2.1",
    "supertest": "^6.3.4"
  },
  "prisma": {
    "schema": "./src/repository/prisma/schema.prisma"
  },
  "resolutions": {
    "@types/express": "4.17.21"
  }
}
