{
  "name": "memoer",
  "version": "1.0.0",
  "main": "index.ts",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --config nodemon.json",
    "start": "tsx -r module-alias/register ./dist",
    "build": "rm -rf ./dist && tsc --build tsconfig.prod.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "build-secrets": "tsx -r module-alias/register ./dist/config/build.env.js",
    "start:dev": "yarn run build && tsx -r module-alias/register ./dist",
    "test": "set NODE_ENV=test && tsx --test --test-concurrency=1 src/test/**test.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.13.0",
    "@types/node": "^20.12.7",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "joi": "^17.13.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "reflect-metadata": "^0.2.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.2",
    "typedi": "^0.10.0",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "dotenv": "^16.4.5",
    "nodemon": "^3.1.0",
    "prettier": "^3.0.3",
    "prisma": "^5.13.0",
    "supertest": "^6.3.4"
  },
  "prisma": {
    "schema": "./src/repository/prisma/schema.prisma"
  }
}
